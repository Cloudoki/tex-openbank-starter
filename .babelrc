{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ["last 2 versions"]
      },
      "loose": true,
      "modules": false
    }],
    "react",
    "stage-2"
  ],
  "plugins": [
    "react-hot-loader/babel",
    "react-docgen"
  ],
  "env": {
    "test": {
      "presets": [
        ["env", { "modules": "commonjs" }],
        "react",
        "stage-2"
      ]
    }
  }
}
